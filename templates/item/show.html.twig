{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Item</h1>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ item.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ item.name }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            <img src="{{ asset('/images/Item/'~item.image) | imagine_filter('my_thumb') }}" alt="{{ item.image }}"/>
                        </td>
                    </tr>
                    <tr>
                        <th>Build</th>
                        <td>
                            {% for item_ingredient in item.build %}
                                <img src="{{ asset('/images/Item/'~item_ingredient.image) | imagine_filter('my_thumb') }}" alt="{{ item_ingredient.image }}"/>
                                {{ item_ingredient.name }}
                            {% endfor %}
                        </td>
                    </tr>
                    </tbody>
                </table>
                <a class="btn btn-primary" href="{{ path('app_item_index') }}">back to list</a>
                <a class="btn btn-primary" href="{{ path('app_item_edit', {'id': item.id}) }}">edit</a>
            </div>
        </div>
    </div>
{% endblock %}
